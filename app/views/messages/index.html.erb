<h1>Listing Messages</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Device</th>
      <th>Title</th>
      <th>Date</th>
      <th><span class="glyphicon glyphicon-send" aria-hidden="true"></span></th>
      <th><span class="glyphicon glyphicon-cloud-download" aria-hidden="true"></span></th>
      <th><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.device ? message.device.name : "" %></td>
        <td><%= message.title %></td>
        <td><%= message.created_at %></td>
        <td><% if message.sent then %><span class="glyphicon glyphicon-ok" aria-hidden="true"></span><% end %></td>
        <td><% if message.received then %><span class="glyphicon glyphicon-ok" aria-hidden="true"></span><% end %></td>
        <td><% if message.red then %><span class="glyphicon glyphicon-ok" aria-hidden="true"></span><% end %></td>
        <td>
          <%= link_to 'Show', message, class: "btn btn-default" %>
          <%= link_to 'Edit', edit_message_path(message), class: "btn btn-default" %>
          <%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", :style => "color:#fff !important;" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_message_path, class: "btn btn-primary", :style => "color:#fff !important;" %>
