<h1>Listing Regions</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Identifier</th>
      <th>Venue</th>
      <th>Type</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.identifier %></td>
        <td><%= region.venue ? region.venue.name : "" %></td>
        <td><%= region.type %></td>
        <td>
          <%= link_to 'Show', region, class: "btn btn-default" %>
          <%= link_to 'Edit', edit_region_path(region), class: "btn btn-default" %>
          <%= link_to 'Destroy', region, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

