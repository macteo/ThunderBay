<%= form_for(@trigger) do |f| %>
  <% if @trigger.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@trigger.errors.count, "error") %> prohibited this trigger from being saved:</h2>

      <ul>
      <% @trigger.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :type %><br>
    <%= f.select :type, Trigger.types.to_a.map { |w,t| [w.humanize, w] }, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :url %><br>
    <%= f.text_field :url, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :payload %><br>
    <%= f.text_area :payload, :value => @trigger.payload ? @trigger.payload.to_json : "", :class => "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit 'Save', :class => "btn btn-primary" %>
  </div>
<% end %>
